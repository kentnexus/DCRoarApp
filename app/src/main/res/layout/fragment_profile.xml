<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/navtop"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="#C7E065"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/profilePicbtn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:background="@drawable/roarlogo"
                android:scaleType="centerCrop"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPlus"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:backgroundTint="#00FFFFFF"
                android:enabled="false"
                android:gravity="right|center_vertical"
                android:paddingRight="20dp"
                android:textColor="@color/black"
                android:textSize="24sp"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imagePic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="15dp"
            android:background="#C7E065"
            app:layout_constraintBottom_toTopOf="@+id/chgPhoto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/profile" />


        <TextView
            android:id="@+id/chgPhoto"
            android:layout_width="101dp"
            android:layout_height="19dp"
            android:layout_marginStart="155dp"
            android:layout_marginEnd="155dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="Change Photo"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/profLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagePic" />

        <TextView
            android:id="@+id/profLabel"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#D7D8D5"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="Profile"
            android:textAllCaps="true"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chgPhoto" />

        <TextView
            android:id="@+id/accLabel"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#D7D8D5"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="Account"
            android:textAllCaps="true"
            app:layout_constraintBottom_toTopOf="@+id/selChangePwd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profLabel">

            <TextView
                android:id="@+id/usrLabel"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="left|center_vertical"
                android:gravity="left|center_vertical"
                android:paddingLeft="20dp"
                android:text="Username"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/usrValue"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="right|center_vertical"
                android:gravity="right|center_vertical"
                android:paddingRight="20dp"
                android:text="annielarson"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <TextView
                android:id="@+id/fnLabel"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="left|center_vertical"
                android:gravity="left|center_vertical"
                android:paddingLeft="20dp"
                android:text="First name"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/fnValue"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="right|center_vertical"
                android:gravity="right|center_vertical"
                android:paddingRight="20dp"
                android:text="Annie"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <TextView
                android:id="@+id/lnLabel"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="left|center_vertical"
                android:gravity="left|center_vertical"
                android:paddingLeft="20dp"
                android:text="Last name"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/lnValue"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="right|center_vertical"
                android:gravity="right|center_vertical"
                android:paddingRight="20dp"
                android:text="Larson"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <TextView
                android:id="@+id/emLabel"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="left|center_vertical"
                android:gravity="left|center_vertical"
                android:paddingLeft="20dp"
                android:text="Email"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/emValue"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="right|center_vertical"
                android:gravity="right|center_vertical"
                android:paddingRight="20dp"
                android:text="larsona@student.douglascollege.ca"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/accLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

            <TextView
                android:id="@+id/moLabel"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="left|center_vertical"
                android:gravity="left|center_vertical"
                android:paddingLeft="20dp"
                android:text="Mobile Number"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/moValue"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="right|center_vertical"
                android:gravity="right|center_vertical"
                android:paddingRight="20dp"
                android:text="(604) 123 1234"
                android:textAllCaps="false" />
        </LinearLayout>

        <TextView
            android:id="@+id/selChangePwd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="left|center_vertical"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="ChangePassword"
            android:textAllCaps="false"
            app:layout_constraintBottom_toTopOf="@+id/selSignout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/accLabel" />

        <TextView
            android:id="@+id/selSignout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginBottom="207dp"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="Sign Out"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selChangePwd" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>