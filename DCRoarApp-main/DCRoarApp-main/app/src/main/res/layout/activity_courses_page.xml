<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CoursesPage">


    <LinearLayout
        android:id="@+id/navtop"
        android:layout_width="412dp"
        android:layout_height="48dp"
        android:background="#C7E065"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/btnCancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:text="<"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="290dp"
            android:layout_height="37dp"
            android:ems="10"
            android:gravity="center|center_vertical"
            android:hint="&#x1F50D; Search"
            android:inputType="textAutoCorrect"
            android:background="@drawable/edittext_search"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnSearch"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:text="Search"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rviewSearch"
        android:layout_width="408dp"
        android:layout_height="65dp"
        android:background="#C6DF65"
        app:layout_constraintBottom_toTopOf="@+id/rviewCourse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navtop"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rviewCourse"
        android:layout_width="409dp"
        android:layout_height="520dp"
        app:layout_constraintBottom_toTopOf="@+id/navbottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rviewSearch" />

    <LinearLayout
        android:id="@+id/navbottom"
        android:layout_width="0dp"
        android:layout_height="61dp"
        android:background="#83FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/labelbottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rviewCourse">


        <ImageButton
            android:id="@+id/chatbtn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/chats" />

        <ImageButton
            android:id="@+id/coursebtn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/courses" />

        <ImageButton
            android:id="@+id/friendsbtn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/friends" />

        <ImageButton
            android:id="@+id/profilebtn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/profile" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/labelbottom"
        android:layout_width="412dp"
        android:layout_height="20dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navbottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chatsLabel"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Chats" />

        <TextView
            android:id="@+id/courseLabel"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Courses" />

        <TextView
            android:id="@+id/priendsLabel"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Friends" />

        <TextView
            android:id="@+id/profileLabel"
            android:layout_width="101dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Friends" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>